<div class="columns">
    <div class="column is-6">
    {{#each posts }}
    {{log "posts homepage" posts}}
    <div class="box">
        <div class="content">
            <h3 class="title is-3 has-text-centered">{{title}}</h3>
            <p class="has-text-centered">{{content}}</p>
            <p class="has-text-centered">{{user.username}}</p>
            <p class="has-text-centered">{{ date_created}}</p>
        </div>
        <div class="content">
            <a href="/dashboard/post/{{id}}">Edit</a>
        </div>
    </div>
    {{/each}}
    </div>
    <div class="column is-6">
        <!---CREATE INPUT FOR TITLE INPUT FOR CONTENT AND BUTTON FOR USERS TO CREATE NEW POSTS--->
        <!----MAKE SURE CLASSES AND IDS MATS THE ONES ON newPost.JS---->
                <form id="new-comment-form" class="card">
                    <div class="card-header">
                        <h3><strong>Add New Post</strong></h3>
                    </div>
            
                    <div class="card-body">
                        <div class="field">
                            <label class="form-label" for="newPostTitle" ></label>
                            <textarea id="newPostTitle" name="newPostTitle" class="textarea" placeholder="Add a post title..."></textarea>
                        </div>
                    
                        <div class="field">
                            <label class="form-label" for="newPostText" > </label>
                            <textarea id="newPostText" name="newPostText" class="textarea" placeholder="Add the post content..."></textarea>
                        </div>
                    
                        <button id="savePost" type="submit" class="button is-small is-info">Submit</button>
                    </div>

                </form>
            </div>

    </div>
</div>



