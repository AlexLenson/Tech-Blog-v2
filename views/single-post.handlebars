<div class="columns is-centered mt-6">
    <div class="column is-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-title">{{posts.title}}</h5>
                </div>
                <div class="card-content">
                   <p class="has-text-centered"> {{posts.content}}</p>
                   <p class="has-text-centered">
                    <small>Written by {{posts.user.username}}</small>
                    <small>on {{posts.date_created}}</small>
                   </p>
                </div>
        </div>
    </div>


</div>
<div class="columns is-centered">
<div class="column is-6">
        {{#if posts.comments}}
        {{#each posts.comments}}
        <div class="box">
            <div class="content">
                <div class="card-header">
                    <p><strong>{{user.username}}</strong></p>
                </div>
                <p>{{content}}</p>
            </div>
        
        </div>
        {{/each}}
        {{/if}}
</div>
</div>

    <!----CREATE INPUT AN BUTTON FOR USERS TO COMMENT --->
    <!----MAKE SURE CLASSES AND IDS MATS THE ONES ON COMMENT.JS---->
    
<div class="columns is-centered">
    <div class="column is-6">
    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Add New Comment</h3>
        </div>
    
        <div class="card-body">
            <input type="hidden" id="postTitle" name="postTitle" data-id="{{posts.id}}" />
    
            <label class="form-label" for="commentBody">Comment</label>
    
            <textarea id="commentBody" name="commentBody" class="form-input"></textarea>
    
            <button id="submit-comment-btn" type="submit" class="btn">Submit</button>
        </div>
    </form>
    </div>
    </div>
</div>


<script src="/js/comment.js"></script>